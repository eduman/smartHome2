<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/marker_info_window_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/marker_info_window_snippet"
            android:src="@android:drawable/ic_menu_delete" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/marker_info_window_snippet"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/marker_info_window_button"
            android:layout_marginLeft="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/marker_info_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/marker_info_window_button"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="Title"/>

        <TextView
            android:id="@+id/marker_info_window_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/marker_info_window_title"
            android:layout_below="@+id/marker_info_window_title"
        	android:layout_marginTop="10dp"
        	android:text="content"/>

</RelativeLayout><!-- From: file:/Users/edo/Documents/Git/smartHome2/MobileHome2/app/src/main/res/layout/marker_info_window_layout.xml -->