{
  "name": "scanner",
  "description": "Configuration for the scanner",
  "meta": {},
  "ttl": 60,
  "resources": [
    {
      "type": "Resource",
      "name": "configuration",
      "meta": {},
      "agent": {
        "type": "task",
        "dir": null,
        "exec": "agents/scanner/getConfiguration.sh"
      },
      "representation": {
        "application/json": {
        }
      },
      "protocols": [
        {
          "type": "REST",
          "methods": [
            "GET"
          ],
          "content-types": [
            "application/json"
          ]
        }
      ]
    },{
      "type": "Resource",
      "name": "scan",
      "meta": {},
      "agent": {
        "type": "task",
        "dir": null,
        "exec": "agents/scanner/scan.sh /home/pi/device_connector/agents/scanner/images"
      },
      "representation": {
        "application/json": {
        }
      },
      "protocols": [
        {
          "type": "REST",
          "methods": [
            "GET"
          ],
          "content-types": [
            "application/json"
          ]
        }
      ]
    },{
      "type": "Resource",
      "name": "dropbox",
      "meta": {},
      "agent": {
	"type": "timer",
	"interval": 5,
        "dir": null,
        "exec": "python agents/dropbox/mydropbox.py -l /home/pi/device_connector/agents/scanner/images -r /scanner"
      },
      "representation": {
        "application/json": {
        }
      },
      "protocols": [
        {
          "type": "REST",
          "methods": [
            "GET"
          ],
          "content-types": [
            "application/json"
          ]
        }
      ]
    }
  ]
}
